<div class="row">
  <div class="col-sm-3">
    One of three columns
  </div>

  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <%= form_for @new_post do |f| %>
          <%= f.text_field :content %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>

    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <%= render 'posts/item', post: post %>
      <% end %>
    <% elsif %>
      <div class="card">
        <div class="card-body">
          You have no posts
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-sm-3">
    One of three columns
  </div>
</div>
